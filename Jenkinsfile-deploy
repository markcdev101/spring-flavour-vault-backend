pipeline {
    agent any

    environment {
        KUBE_NAMESPACE = "app"  // Specify your Kubernetes namespace
        KUBECONFIG = "/var/lib/jenkins/.kube/config"  // Path to your kubeconfig file
        DOCKER_IMAGE_NAME = "markcdev101docker/d3k7m5s9r4p2g2:latest"  // Use the latest image
    }

    stages {
        stage('Manual Approval for Deployment') {
            steps {
                script {
                    echo "Awaiting manual approval for deployment..."
                    input message: 'Approve Deployment?', ok: 'Deploy'
                }
            }
        }

        stage('Deploy Service to Kubernetes') {
            steps {
                script {
                    echo "Deploying service to Kubernetes..."
                    sh "kubectl apply -f springboot-service.yaml -n ${KUBE_NAMESPACE}"
                }
            }
        }

        stage('Deploy Application to Kubernetes') {
            steps {
                script {
                    echo "Deploying application to Kubernetes..."
                    sh "kubectl apply -f springboot-deployment.yaml -n ${KUBE_NAMESPACE}"
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "Verifying deployment..."
                    def deploymentCheck = sh(script: "kubectl rollout status deployment/flavourvault-backend -n ${KUBE_NAMESPACE}", returnStdout: true).trim()
                    echo "Deployment status:\n${deploymentCheck}"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
        success {
            echo "Deployment to Kubernetes was successful."
        }
        failure {
            echo "Deployment to Kubernetes failed."
        }
    }
}
